#! /bin/sh

if test -z $1 ; then
	echo "Usage: $0 option"
	exit 1
fi

prefix="@prefix@"
exec_prefix="@exec_prefix@"
bindir="@bindir@"
sbindir="@sbindir@"
libdir="@libdir@"
includedir="@includedir@"
datadir="@datadir@"
initdir="@initdir@"
pythondir="@pythondir@"

case $1 in
	--prefix) echo "$prefix" ;;
	--exec_prefix) echo "$exec_prefix" ;;
	--bindir) echo "$bindir" ;;
	--sbindir) echo "$sbindir" ;;
	--libdir) echo "$libdir" ;;
	--includedir) echo "$includedir" ;;
	--datadir) echo "$datadir" ;;
	--initdir) echo "$initdir" ;;
	--pythondir) echo "$pythondir" ;;
	*)
		echo "error: unknown option: $1"
		exit 1
		;;
esac
exit 0
